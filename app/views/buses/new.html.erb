<h1>New Bus</h1>

<%= form_for(@bus) do |f| %>
  <div class="field">
    <%= f.label :number %>
    <%= f.number_field :number %>
  </div>

  <div class="field">
    <%= f.label :route %>
    <%= f.text_field :route %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', buses_path %>
