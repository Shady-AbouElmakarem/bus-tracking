<p id="notice"><%= notice %></p>

<h1>Buses</h1>

<table>
  <thead>
    <tr>
      <th>Route</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @buses== nil %>
      <% @buses.each do |bus_id, values| %>
        <tr>
          <td><%= values["number"] %></td>
          <td><%= values["route"] %></td>
          <td><%= link_to 'Destroy', {:controller => "buses", :action => :destroy, :id => bus_id },method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bus', new_bus_path %>
