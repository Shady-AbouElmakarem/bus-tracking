<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>Account Info</h1>
  <br />
  <table class="table table-hover">
    <thead>
    </thead>
    <tbody>
      <tr>
        <td>User ID</td>
        <td><%= current_user["uid"] %></td>
      </tr>
      <tr>
        <td>User Bus</td>
        <td><%= current_user["bus"] %></td>
      </tr>
      <tr>
        <td>Pickup Location</td>
        <td><%= current_user["pickUpLocation"][0] %></td>
      </tr>
    </tbody>
  </table>
</section>

  <br />
  <br />

  <section class="content-header col-md-5" style="border-right: 2px solid #e0dbdb">
    <h1>Change Password</h1>
    <br />

    <div id="change_password">
      <%=form_tag "/users/account", :method => :post, :class => 'form-inline'  do %>
      <div class="form-group">
        <%= label_tag :new_password, "New Password:"%>
        <%= password_field_tag :new_password, nil, class:"form-control"%>
      </div><br /><br />
      <%= submit_tag "Apply New Password", class:"btn btn-success" %>
      <% end %>


    </div>
  </section>
  <section class="content-header col-md-1">
  </section>

  <section class="content-header col-md-4">
    <h1>Choose Pickup Location</h1>
    <br />

    <div id="pick_up_location">
      <%=form_tag "/users/account", :method => :post, :class => 'form-inline'  do %>
        <div class="form-group">
          <%= label_tag :pickUpLocation, "Location:"%>
          <select class="form-control" name="pickUpLocation">
            <% if current_user["pickUpLocation"][0] =="" %>
              <option value="" disabled selected hidden>Select Location</option>
            <% else %>
              <option value="<%= current_user['pickUpLocation']%>" selected ><%= current_user["pickUpLocation"][0] %></option>
            <% end %>
            <% @buses.each do |bus_id, bus| %>
              <% if bus["busid"] == current_user["bus"] %>
                <% bus["route"].each_with_index do |location, index |%>
                  <% if (index.to_i+1)%3 == 0%>
                    <% unless bus["route"][index.to_i-2] == current_user["pickUpLocation"][0]%>
                      <option value = '<%=[bus["route"][index.to_i-2], bus["route"][index.to_i-1], bus["route"][index.to_i]]%>'><%=bus["route"][index.to_i-2]%></option>
                    <% end %>
                  <% end %>
                <% end %>
                <% break %>
              <% end %>
            <% end %>
          </select>
        </div>
        <br /><br />
        <%= submit_tag "Apply New Location", class:"btn btn-success" %>
      <% end %>
    </div>
  </section>
