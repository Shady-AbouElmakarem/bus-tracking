<section class="content-header">
  <h1>Complaint:</h1>
  <br />
  <br />
  <%= form_tag "/complaints", class: "form-horizontal" do %>
    <!-- Text input-->
    <div class="form-group">
      <div class="col-md-6 inputGroupContainer">
          <textarea  name="complaint" placeholder="Please be specific while writing the complaint." rows="6" class="form-control"></textarea>
      </div>
    </div>
    <!-- Button -->
    <div class="form-group">
      <div class="col-md-4">
        <button type="submit" class="btn btn-success" >Send</button>
      </div>
    </div>
  <% end %>
</section>
<link rel="stylesheet" type="text/css" href="/css/form.css">
