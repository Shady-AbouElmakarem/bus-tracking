<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @reports== nil %>
      <% @reports.each do |report_id, values| %>
        <tr>
          <td><%= values["uid"] %></td>
          <td><%= values["body"] %></td>
          <td><%= link_to 'Destroy', {:controller => "reports", :action => :destroy, :id => report_id },method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>
